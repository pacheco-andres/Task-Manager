<div class="frame">
  <p id="notice"><%= notice %></p>
  <h1>Tasks</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Deadline</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= task.deadline %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) if can? :edit, task %></td> 
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, task %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Task', new_task_path if current_user.has_role? :teacher%>
</div>